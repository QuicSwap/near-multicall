{
  "extends": "near-sdk-as/asconfig.json",
  "entries": [
    "./assembly/index.ts"
  ],
  "options": {
    "measure": true
  },
  "targets": {
    "release": {
      "optimize": true,
      "optimizeLevel": 3,
      "converge": true,
      "binaryFile": "./res/release/contract.wasm",
      "textFile": "./res/release/contract.wat"
    },
    "debug": {
      "debug": true,
      "binaryFile": "./res/debug/contract.wasm",
      "textFile": "./res/debug/contract.wat"
    }
  },
  "experimentalDecorators": true
}

